<!DOCTYPE html>
<html>
<head>
  <title>Herbal Garden</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-10">
  <h1 class="text-3xl mb-2">Welcome, <%= user.name %>!</h1>
  <a href="/logout" class="bg-red-500 text-white px-4 py-2">Logout</a>

  <h2 class="mt-6 text-2xl">Medicinal Plants</h2>
  <ul>
    <% plants.forEach(plant => { %>
      <li class="border p-4 mt-2"><%= plant.name %>: <%= plant.description %></li>
    <% }) %>
  </ul>
</body>
</html>
